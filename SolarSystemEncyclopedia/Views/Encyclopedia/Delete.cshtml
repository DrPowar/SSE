@model SolarSystemEncyclopedia.ViewModels.DeleteViewModel

@{
    ViewData["Title"] = "Delete";
}


<div style="margin-top: 2%; margin-bottom: 2%;">
    <div class="container-fluid col-md-10 m-auto">
        <div class="row container-fluid d-flex align-items-center justify-content-center">
            <div class="col-md-6 blue-div">
                <h1>Delete</h1>

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    @if (Model.Planet != null)
                    {
                        <h4>Planet</h4>
                        <hr/>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Planet.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Planet.Name)
                            </dd>
                        </dl>

                        <h1>Delete</h1>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Planet.Id" name="id" />
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <input type="submit" value="Back" asp-action="Index" class="btn btn-link"></input>
                        </form>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    }
                    else if (Model.Star != null)
                    {
                        <h4>Star</h4>
                        <hr/>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Star.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Star.Name)
                            </dd>
                        </dl>
                        <h1>Delete</h1>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Star.Id" name="id" />
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <input type="submit" value="Back"asp-action="Index" class="btn btn-link"></input>
                        </form>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    }
                    else if (Model.Moon != null)
                    {
                        <h4>Moon</h4>
                        <hr/>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Moon.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Moon.Name)
                            </dd>
                        </dl>
                        <h1>Delete</h1>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Moon.Id" name="id"/>
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <input type="submit" value="Back"asp-action="Index" class="btn btn-link"></input>
                        </form>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>